{
    "require": {
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^2.5",
        "illuminate/database": "^5.7",
        "pecee/simple-router": "4.2.0.6",
        "klein/klein": "^2.1",
        "rakit/validation": "^1.1",
        "tightenco/collect": "^5.7",
        "firebase/php-jwt": "^5.0",
        "mockery/mockery": "^1.2",
        "phpspec/phpspec": "^5.1",
        "guzzlehttp/guzzle": "~6.0",
        "fzaninotto/faker": "^1.8",
        "php-di/php-di": "^6.0"
    },
	"autoload": {
		"psr-4": {
			"Emeka\\": "src/",
			"Emeka\\Router\\": "app/router",
            "Test\\": "tests/"
		},
        "files": []
	},
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpunit/dbunit": "^4.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Emeka\\Test\\": "tests/"
        },
        "classmap": ["tests/"]
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload"
        ]
    }
}
